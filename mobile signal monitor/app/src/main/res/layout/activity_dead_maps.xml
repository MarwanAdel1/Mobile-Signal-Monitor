<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">



    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.pcworld.withmain.Mapdeadzone" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <Button
        android:id="@+id/walk"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:textColor="#0B3861"
        android:text="Walking Route"
        android:paddingLeft="15dp"
        android:background="@drawable/route"
        android:drawableLeft="@drawable/ic_directions_walk_black_24dp"/>

    <Button
        android:id="@+id/drive"
        android:layout_marginLeft="20dp"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:textAllCaps="false"
        android:text="Driving Route"
        android:textColor="#0B3861"
        android:paddingLeft="15dp"
        android:background="@drawable/route"
        android:drawableLeft="@drawable/ic_directions_car_black_24dp"/>

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textColor="#0B3861"
        android:textAlignment="center"
        android:text="" />

    <TextView
        android:id="@+id/txt_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textColor="#0B3861"
        android:textAlignment="center"
        android:layout_marginBottom="14dp"
        android:text="" />
        </LinearLayout>

</RelativeLayout>
