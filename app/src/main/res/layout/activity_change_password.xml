<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.fireapp.menuButtons.ChangePassword"
    android:background="@drawable/back"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_marginLeft="20dp"
        android:paddingLeft="10dp"
        android:text="Enter Your Old Password"
        android:textColor="#0B4C5F"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/oldPassword"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/text"
        android:inputType="phone"
        android:paddingLeft="20dp"
        android:textColor="@color/colorAccent3"
        android:textColorHint="#6E6E6E" />

    <TextView
        android:id="@+id/Edit_error3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:paddingLeft="10dp"
        android:text=" "
        android:textColor="#FF0000"
        android:textSize="10sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:paddingLeft="10dp"
        android:text="Enter Your New Password"
        android:textColor="#0B4C5F"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/newPassword"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/text"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:textColor="@color/colorAccent3" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:paddingLeft="10dp"
        android:text="Enter Your Confirm Password"
        android:textColor="#0B4C5F"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/newPassword2"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/text"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:textColor="@color/colorAccent3" />

    <TextView
        android:id="@+id/Edit_error4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:paddingLeft="10dp"
        android:text=" "
        android:textColor="#FF0000"
        android:textSize="10sp" />
    <Button
        android:id="@+id/updatePassword"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/signin"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent3"
        android:textSize="15sp"
        android:textStyle="bold" />

</LinearLayout>
